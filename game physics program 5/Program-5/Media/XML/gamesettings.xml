<!-- Game settings -->

<settings>
  <game name="Rube Goldberg Machine" />
  <renderer width="1024" height="768" />
  
   <font file="Media\Fonts\AverageSans_32.spritefont"/>

  <!-- sprites -->

  <sprites path="Media\Images">
    <sprite name="background" file="background.png"/>
    <sprite name="ball" file="ball.png"/>
    <sprite name="button" file="button.png"/>
    <sprite name="clockface" file="clockface.png"/>
    <sprite name="line" file="line.png"/>
    <sprite name="metroid" file="metroid.png"/>
    <sprite name="kraid" file="Kraid.png"/>
    <sprite name="kraidArm" file="KraidArm.png"/>
    <sprite name="kraidFoot" file="KraidFoot.png"/>
